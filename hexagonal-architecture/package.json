{
  "name": "hexagonal-architecture",
  "version": "1.0.0",
  "description": "A  simple hexagonal architecture example made with TypeScript",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "test": "node --test --loader ts-node/esm tests/**/*.test.ts",
    "test:watch": "node --test --watch --loader ts-node/esm tests/**/*.test.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "dev": "node --loader ts-node/esm --watch src/main.ts",
    "dev-debug": "node --inspect --loader ts-node/esm --watch src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/npoy/clean-architecture-typescript.git"
  },
  "keywords": [],
